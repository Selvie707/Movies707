<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Movies" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/viaa</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <!--    Light Mode-->
    <style name="THEMEVALUE">
        <item name="android:layout_width">320dp</item>
    </style>
    <style name="CARDVIEW">
        <item name="cardBackgroundColor">@color/white</item>
    </style>
    <style name="IMAGEVIEW">
        <item name="tint">@color/viaa</item>
    </style>

    <style name="IMAGEVIEWGENRE">
        <item name="tint">@color/white</item>
    </style>

    <style name="IMAGEVIEWDETAIL">
        <item name="tint">@color/black</item>
    </style>

    <style name="ACCESSDENIED">
        <item name="android:textColor">#FF3333</item>
        <item name="tint">#FF3333</item>
    </style>

    <style name="SCREEN">
        <item name="android:background">#FFF</item>
    </style>

    <style name="SCREENBGTINT">
        <item name="android:backgroundTint">#FFF</item>
    </style>

    <style name="SCREENALERTBOX">
        <item name="android:background">#A2B0BF</item>
    </style>

    <style name="TEXT">
        <item name="android:textColor">#000</item>
        <item name="android:drawableTint">#000</item>
    </style>

    <style name="TEXTMAINMENUTOP">
        <item name="android:textColor">#0F7CC6</item>
    </style>

    <style name="TEXTMAINMENU">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">#99000000</item>
    </style>

    <style name="TEXTALERTDIALOG">
        <item name="android:textColor">#A2B0BF</item>
    </style>

    <style name="BUTTON">
        <item name="android:background">@android:color/holo_blue_dark</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="EDITTEXT">
        <item name="android:textColorHint">#9E9E9E</item>
        <item name="drawableTint">@color/viaa</item>
    </style>

    <style name="CHECKBOX">
        <item name="android:buttonTint">#000</item>
    </style>

    <style name="MENUBOTTOM">
        <item name="android:background">@color/white</item>
        <item name="itemIconTint">@color/viaa</item>
        <item name="itemTextColor">@color/black</item>
    </style>
</resources>